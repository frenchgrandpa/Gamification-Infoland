{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "commonjs",
        "target": "ES5",
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "rootDir": "src",
        "outDir": "build"
    },
    "include": [
        "src/**/*.ts"
    ]
}